@model SignInForm

@{
    ViewData["Title"] = "Sign in";
}

<section class="signin">
    <div class="container">
        <form method="post" asp-controller="Auth" asp-action="SignIn">
            <h1>Sign in</h1>
            <p>Already have an account? <a asp-controller="Auth" asp-action="SignIn">Sign in here</a></p>

            <div class="alert">
                @ViewData["StatusMessage"]
            </div>

            <div class="form-content">
                <div class="input-group input-email">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                </div>

                <div class="input-group input-password">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                </div>

                <div class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="IsPresistent" />
                        <label asp-for="IsPresistent"></label>
                    </div>
                </div>

                <button class="btn btn-theme" type="submit">Sign in</button>

            </div>
        </form>
    </div>
</section>